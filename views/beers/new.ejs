<%- include("../partials/header") %>

<div class="container mt-5">
    <h1 class="text-center mb-3">Add New Beer</h1>
    <div class="row formCenter">
        <div class="col-md-5">
            <form action="/beers" method="POST">
                <div class="form-group input-group-lg">
                    <input class="form-control" type="text" name="beer[name]" id="beerName" placeholder="Beer Name">
                </div>
            
                <div class="form-group input-group-lg">
                    <input class="form-control" type="text" name="beer[image]" id="beerImage" placeholder="Beer Image Url">
                </div>

                <div class="form-group input-group-lg">
                    <textarea class="form-control" name="beer[description]" id="beerDesc" row="3" placeholder="Beer Description"></textarea>
                </div>
            
                <button type="submit" class="btn btn-block customBtn submitBtn">Add</button>
                <p class="backBtn">
                    <a href="/beers">Back</a>
                </p>
            </form>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>