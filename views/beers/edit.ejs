<%- include("../partials/header") %>

<div class="container">
    <!-- <div class="row"> -->
        <h1 class="text-center">Edit <%= beer.name %></h1>
        <div style="width: 30%; margin: 1rem auto;">
            <form action="/beers/<%= beer._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="beerName">Name</label>
                    <input type="text" name="beer[name]" id="beerName" value="<%= beer.name %>">
                </div>
            
                <div class="form-group">
                    <label for="beerImage">Image</label>
                    <input type="text" name="beer[image]" id="beerImage" value="<%= beer.image %>">
                </div>

                <div class="form-group">
                    <label for="beerDesc">Description</label>
                    <input type="text" name="beer[description]" id="beerDesc" value="<%= beer.description %>">
                </div>
            
                <button type="submit" class="btn btn-default btn-primary">Submit</button>
            </form>
        </div>
    
        <a href="/beers">Back</a>
    <!-- </ > -->
</div>


<%- include("../partials/footer") %>